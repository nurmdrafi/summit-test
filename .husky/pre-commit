#!/usr/bin/env sh
. "$(dirname "$0")/_/husky.sh"

# This script runs commit-msg logic, linting, type checking, and builds before allowing a commit.
echo 'ğŸ› ï¸  Preparing to commit: Running commit-msg logic, linting, type checking, and build...'

# Call commit-msg logic
echo 'ğŸ” Validating commit message...'
"$(dirname "$0")/commit-msg" "$(git rev-parse --git-dir)/COMMIT_EDITMSG"

# Check the exit code of commit-msg
if [ $? -ne 0 ]; then
  echo "âŒ Commit message validation failed. Aborting commit."
  exit 1
fi

# Run ESLint for linting
echo "ğŸ” Running ESLint..."
npm run lint ||
(
  echo 'âŒ ESLint check failed. Please fix the linting issues before committing.'
  exit 1
)

# Run TypeScript type checking
echo "ğŸ” Running TypeScript type checking..."
npm run check-types ||
(
  echo 'âŒ TypeScript type checking failed. Please fix the type errors before committing.'
  exit 1
)

# Build the project
echo "ğŸ› ï¸  Building the project..."
npm run build ||
(
  echo 'âŒ Build failed. Please ensure the build process completes successfully before committing.'
  exit 1
)

# All checks passed, allow the commit
echo 'âœ… All pre-commit checks passed. You can proceed with the commit.'